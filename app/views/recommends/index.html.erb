<% content_for(:title, t('.title')) %>
<div class="container mx-auto pt-3 px-2 md:px-12 py-24">
  <div class="flex justify-start items-center bg-base-100">
    <div class="flex items-center">
      <span class="material-symbols-outlined md:text-2xl text-primary" style="font-variation-settings: 'FILL' 1;">lightbulb_2</span>
      <h1 class="text-base md:text-lg font-medium ml-3"><%= t('.title') %></h1>
    </div>
  </div>
  <div class="flex flex-wrap justify-start gap-4 md:gap-8 mt-6 md:mt-12">
    <% if @recommends.present? %>
      <% @recommends.each do |place, recommends| %>
        <div class="card shadow rounded p-5 flex flex-col w-full max-w-lg bg-slate-50 dark:bg-base-200">
          <%= link_to by_place_recommends_path(place), class: "block h-full" do %>
            <h2 class="text-sm md:text-lg font-medium text-center"><%= place %></h2>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center text-sm md:text-base text-gray-500 m-12">マストアイテムが見つかりませんでした</p>
    <% end %>
  </div>
</div>
<%= link_to new_recommend_path, class: "fixed bottom-24 right-5 md:right-20 z-60 
  bg-gradient-to-t from-primary to-cyan-500 text-white font-bold  rounded-full text-base md:text-lg p-4 md:p-5 flex items-center 
  justify-center shadow transition-all duration-300 hover:brightness-110" do %>
  <span class="material-symbols-outlined text-2xl">add</span>
<% end %>
