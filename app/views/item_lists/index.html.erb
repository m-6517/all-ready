<% content_for(:title, t('.title')) %>
  <div class="container mx-auto pt-3 px-12 py-24">
    <div class="flex justify-start items-center bg-base-100">
      <div class="flex items-center">
        <span class="material-symbols-outlined text-2xl text-primary" style="font-variation-settings: 'FILL' 1;">playlist_add</span>
        <h1 class="text-lg font-medium ml-3">持ち物リスト</h1>
      </div>
    </div>

    <% if @item_lists.present? %>
      <div class="flex flex-wrap justify-start gap-8 mt-12">
        <%= render @item_lists %>
      </div>
    <% else %>
      <p class="text-center text-gray-500 m-12">持ち物リストが見つかりませんでした</p>
    <% end %>
  </div>
  <button class="fixed bottom-20 right-20 bg-primary text-white font-bold rounded-full text-lg p-5 flex items-center justify-center shadow transition-all duration-300 hover:brightness-110" onclick="document.getElementById('addItemList').showModal()">
    <span class="material-symbols-outlined text-2xl">add</span>
  </button>

  <dialog id="addItemList" class="modal">
    <div class="modal-box bg-slate-50 w-96 mx-auto flex flex-col items-center py-12">
      <%= form_with model: @item_list, url: item_lists_path, local: true do |f| %>
        <label class="form-control w-full max-w-xs">
          <input type="text" placeholder="リストの名前" name="item_list[name]" class="input input-bordered w-full max-w-xs" required />
        </label>
        <div class="mt-4">
          <%= f.submit '決定', class: "btn btn-primary w-full" %>
        </div>
      <% end %>
      <div class="modal-action">
        <form method="dialog">
          <button class="btn btn-ghost">キャンセル</button>
        </form>
      </div>
    </div>
  </dialog>
