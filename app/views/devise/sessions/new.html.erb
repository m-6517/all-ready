<% content_for(:title, t('sessions.new.title')) %>
<div class="flex items-center justify-center md:m-12">
  <div class="max-w-md w-full p-6 rounded shadow">
    <h1 class="text-lg font-medium mb-6">ログイン</h1>

    <%= form_with model: resource, url: session_path(resource_name), local: true, class: "space-y-4" do |f| %>

      <div class="field">
        <%= f.label :email, class: "text-sm" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered input-sm w-full" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "text-sm" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered input-sm w-full" %>
      </div>

      <div class="flex flex-col justify-start md:flex-row md:justify-between md:items-center">
        <% if devise_mapping.rememberable? %>
          <div class="field flex items-center gap-2 mb-6 md:mb-0">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "text-xs text-nowrap" %>
          </div>
        <% end %>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "text-xs text-nowrap" %>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary w-full mt-4" %>
      </div>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "アカウントを作成", new_registration_path(resource_name),
          class: "btn btn-outline text-primary bg-white dark:bg-base-200 dark:text-neutral border-primary dark:border-neutral hover:bg-gray-100 hover:border-primary hover:text-primary
          dark:hover:bg-base-300 dark:hover:border-neutral dark:hover:text-neutral w-full mb-6" %>
      <% end %>

      <div class="divider text-xs">または</div>

    <% end %>
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to user_google_oauth2_omniauth_authorize_path, class: "w-full", method: :post, data: { turbo: false } do %>
          <div class="gsi-material-button mt-4">
            <div class="gsi-material-button-state"></div>
            <div class="gsi-material-button-content-wrapper">
              <div class="gsi-material-button-icon">
                <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" xmlns:xlink="http://www.w3.org/1999/xlink" style="display: block;">
                  <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
                  <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
                  <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
                  <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
                  <path fill="none" d="M0 0h48v48H0z"></path>
                </svg>
              </div>
              <span class="gsi-material-button-contents">Googleでログイン</span>
              <span style="display: none;">Googleでログイン</span>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
